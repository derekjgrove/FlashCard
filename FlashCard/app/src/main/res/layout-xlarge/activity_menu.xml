<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity"
    android:background="@color/skyblue">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/iv_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manageOption"
        android:clickable="true"
        android:src="@drawable/ic_manage"
        android:soundEffectsEnabled="true"
        android:layout_above="@+id/quizOption"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quizOption"
        android:clickable="true"
        android:src="@drawable/ic_quiz"
        android:soundEffectsEnabled="true"
        android:layout_above="@+id/practiceOption"
        android:layout_alignLeft="@+id/manageOption"
        android:layout_alignStart="@+id/manageOption"
        android:layout_marginBottom="132dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/practiceOption"
        android:src="@drawable/ic_practice"
        android:clickable="true"
        android:soundEffectsEnabled="true"
        android:layout_marginBottom="248dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage"
        android:id="@+id/manageText"
        android:textColor="@color/answerblue"
        android:textSize="30sp"
        android:layout_alignTop="@+id/manageOption"
        android:layout_alignLeft="@+id/practiceText"
        android:layout_alignStart="@+id/practiceText"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:id="@+id/quizText"
        android:textColor="@color/answerblue"
        android:textSize="30sp"
        android:layout_alignTop="@+id/quizOption"
        android:layout_alignLeft="@+id/manageText"
        android:layout_alignStart="@+id/manageText"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice"
        android:id="@+id/practiceText"
        android:textColor="@color/answerblue"
        android:textSize="30sp"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:layout_alignTop="@+id/practiceOption"
        android:layout_toRightOf="@+id/practiceOption"
        android:layout_toEndOf="@+id/practiceOption"
        android:layout_marginTop="19dp" />

</RelativeLayout>
