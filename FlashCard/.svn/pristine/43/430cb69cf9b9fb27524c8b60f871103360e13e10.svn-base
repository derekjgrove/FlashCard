<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    android:orientation="vertical" >


    <ViewSwitcher
        android:id="@+id/viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/linearLayout">

    <ImageView
        android:clickable="false"
        android:background="@android:color/white"
        android:id="@+id/cardImage"
        android:name="cardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/linearLayout" />


    <TextView
        android:background="@color/lightgrey"
        android:text=""
        android:gravity="center"
        android:id="@+id/answerText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:layout_above="@+id/linearLayout"
        android:elegantTextHeight="false"
        android:textColor="@color/answerblue"
        android:textColorHighlight="@color/skyblue"
        android:textIsSelectable="true"
        android:textSize="50sp"/>

    </ViewSwitcher>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flipCard"
        android:src="@drawable/ic_flip"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="reveal"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/viewSwitcher"
        android:layout_alignStart="@+id/viewSwitcher"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="15dp"
        android:onClick="reveal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prevButton"
            android:clickable="true"
            android:src="@drawable/ic_leftarrow"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:soundEffectsEnabled="true"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundButton"
            android:src="@drawable/ic_playaudio"
            android:clickable="true"
            android:soundEffectsEnabled="true"
            android:layout_weight="1"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton"
            android:clickable="true"
            android:src="@drawable/ic_rightarrow"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:soundEffectsEnabled="true"
            android:layout_weight="1"/>

    </LinearLayout>




</RelativeLayout>
